{
	"compilerOptions": {
		"target": "ES5",
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"rootDir": "./src",
		"allowJs": true,
		"checkJs": true,
		"outDir": "lib",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": false,
		"sourceMap": true,
		"moduleResolution": "node",
		"strictNullChecks": true,
		"importHelpers": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/index.ts"],
	"exclude": ["node_modules", "lib"]
}
